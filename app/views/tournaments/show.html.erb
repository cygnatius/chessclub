<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @tournament.title %>
</p>

<p>
  <strong>Timelimit:</strong>
  <%= @tournament.timelimit %>
</p>

<p>
  <strong>Format:</strong>
  <%= @tournament.format %>
</p>

<%= link_to 'Edit', edit_club_tournament_path(@tournament) %> |
<%= link_to 'Back', club_tournaments_path(@club) %> |
<a class="btn btn-default" href="#" role="button">Add Players</a>
<% if @tournament.players.any? %>
	<% @tournament.players.each do |tp| %>
		<% tp.firstname + ' ' + tp.lastname %>
	<% end %>
<% else %>
	<p>No players currently enrolled in this tournament.</p>
<% end %>
<%= button_to 'Add Players', club_tournament_path(@club, @tournament), :class => "btn btn-primary" %>
